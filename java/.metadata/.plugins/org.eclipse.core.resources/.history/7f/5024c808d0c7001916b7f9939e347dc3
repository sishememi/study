package chap5;
/*
 * 반복문을 이용하여 1부터 10까지의 합 구하기.
 * */
public class LoopEx2 {
	public static void main(String[] args) {
		int i,sum=0;
		
		System.out.println("for 구문 사용");
		for(int i=1;i<=10;i++) {
			sum+=i;
		}System.out.println();
		
		System.out.println("while 구문 사용");
		
		while(i<=10) {
			sum+=i;
			i++;
		}System.out.println();
		
		System.out.println("do while 구문사용");
		do {
			sum+=i;
			i++;
		}while(i<=10);
	}

}
