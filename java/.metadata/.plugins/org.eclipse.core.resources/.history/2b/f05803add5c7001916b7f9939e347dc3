package chap5;


public class ex190826 {
	public static void main(String[] args) {
		int sum=0;
		int i=0;
		System.out.println("for 구문");
		for(i=1;i<=100;i++) {
			sum+=i+1;
		}System.out.println("1~100까지 짝수의 합: "+sum);
		
		System.out.println("while 구문");
		while(i<=100)
		{
			sum+=i+1;
		}System.out.println("1~100까지 짝수의 합: "+sum);
		
		System.out.println("do whiel 구문");
		do
		{
			sum+=i+1;
			i++;
		}while(i<=100);System.out.println("1~100까지 짝수의 합: "+sum);
	}
}
